@inherits Umbraco.Web.Mvc.UmbracoViewPage
@{
	Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <link href="~/css/style.css" rel="stylesheet" />
    <script src="https://kit.fontawesome.com/b394bbec28.js" crossorigin="anonymous"></script>
</head>
<body>
    <header>
        @Html.Partial("Navigation")
    </header>

        @RenderBody()

    <footer>
        <div class="wrapper">

            @Model.Value("footertext")

            @{
                var typedMediaPickerSingle = Model.Value<IPublishedContent>("footerlogo");
                if (typedMediaPickerSingle != null)
                {
                    <img src="@typedMediaPickerSingle.Url" style="width:300px" alt="@typedMediaPickerSingle.Value("alt")" />
                }
            }
        </div>
    </footer>
</body>
</html>